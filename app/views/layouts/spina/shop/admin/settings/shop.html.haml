- content_for :application do
  %header#header
    = render partial: 'spina/admin/shared/breadcrumbs'

    %nav#secondary.tabs
      %ul
        %li{class: ('active' if controller_name == 'product_categories')}
          = link_to t('spina.shop.product_categories'), spina.shop_admin_settings_product_categories_path
        %li{class: ('active' if controller_name == 'tax_groups')}
          = link_to t('spina.shop.tax_groups'), spina.shop_admin_settings_tax_groups_path
        %li{class: ('active' if controller_name == 'sales_categories')}
          = link_to t('spina.shop.sales_categories'), spina.shop_admin_settings_sales_categories_path

  = yield

= render template: 'layouts/spina/admin/admin'