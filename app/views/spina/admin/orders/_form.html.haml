= form_for [:admin, @order] do |f|
  %header#header
    #header_actions
      = button_tag type: :submit, class: 'button button-primary' do
        = icon('check')
        =t ('spina.shop.orders.save')

    .breadcrumbs= render_breadcrumbs separator: '<div class="divider"></div>'

  .sidebar-form
    .sidebar-form-content
      .well
        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name(:note)

          .sidebar-form-control
            ~ f.text_area :note, placeholder: Spina::Order.human_attribute_name(:note)

      .well
        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :first_name

          .sidebar-form-control
            = f.text_field :first_name, placeholder: Spina::Order.human_attribute_name(:first_name)

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :last_name

          .sidebar-form-control
            = f.text_field :last_name, placeholder: Spina::Order.human_attribute_name(:last_name)

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :email

          .sidebar-form-control
            = f.text_field :email, placeholder: Spina::Order.human_attribute_name(:email)

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :phone

          .sidebar-form-control
            = f.text_field :phone, placeholder: Spina::Order.human_attribute_name(:phone)

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :company

          .sidebar-form-control
            = f.text_field :company, placeholder: Spina::Order.human_attribute_name(:company)

      .well
        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :billing_street1
          .sidebar-form-control
            = f.text_field :billing_street1, placeholder: Spina::Order.human_attribute_name(:billing_street1), style: 'padding-bottom: 0px; height: 40px'
            %br/
            = f.text_field :billing_street2, placeholder: Spina::Order.human_attribute_name(:billing_street2), style: 'padding-top: 0px; padding-bottom: 0px; height: 30px'

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :billing_house_number
          .sidebar-form-control
            = f.text_field :billing_house_number

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :billing_house_number_addition
          .sidebar-form-control
            = f.text_field :billing_house_number_addition

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :billing_postal_code
          .sidebar-form-control
            = f.text_field :billing_postal_code

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :billing_city
          .sidebar-form-control
            = f.text_field :billing_city

      .well
        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :separate_delivery_address
          .sidebar-form-control
            = f.check_box :separate_delivery_address, data: {switch: true, toggle: '#delivery_address'}

      .well#delivery_address
        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :delivery_name
          .sidebar-form-control
            = f.text_field :delivery_name, placeholder: Spina::Order.human_attribute_name(:delivery_name)

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :delivery_street1
          .sidebar-form-control
            = f.text_field :delivery_street1, placeholder: Spina::Order.human_attribute_name(:delivery_street1), style: 'padding-bottom: 0px; height: 40px'
            %br/
            = f.text_field :delivery_street2, placeholder: Spina::Order.human_attribute_name(:delivery_street2), style: 'padding-top: 0px; padding-bottom: 0px; height: 30px'

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :delivery_house_number
          .sidebar-form-control
            = f.text_field :delivery_house_number

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :delivery_house_number_addition
          .sidebar-form-control
            = f.text_field :delivery_house_number_addition

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :delivery_postal_code
          .sidebar-form-control
            = f.text_field :delivery_postal_code

        .sidebar-form-group
          .sidebar-form-label
            = Spina::Order.human_attribute_name :delivery_city
          .sidebar-form-control
            = f.text_field :delivery_city
