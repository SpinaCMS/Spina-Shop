.sidebar-form-group
  .sidebar-form-label
    = property.label

  .sidebar-form-control{data: {form: {append: property.append, prepend: property.prepend}}}
    - case property.field_type
    - when 'select'
      = f.select property.name, options_for_select(property.options, (object.properties[property.name] if object.properties.present?)), {}, class: 'select2', multiple: property.multiple, style: 'width: 100%'
    - else
      = f.text_field property.name, placeholder: property.label, value: (object.properties[property.name] if object.properties.present?)