.well
  .sidebar-form-group
    .sidebar-form-label
      = Spina::Shop::Address.human_attribute_name :address_type
    .sidebar-form-control
      = f.select :address_type, options_for_select([[Spina::Shop::Address.human_attribute_name('billing_address'), 'billing'], [Spina::Shop::Address.human_attribute_name('delivery_address'), 'delivery']], f.object.address_type), {include_blank: true}, class: 'select2', style: 'width: 100% '

  .sidebar-form-group
    .sidebar-form-label
      = Spina::Shop::Address.human_attribute_name :street1
    .sidebar-form-control
      = f.text_field :street1, placeholder: Spina::Shop::Address.human_attribute_name(:street1), style: 'padding-bottom: 0px; height: 40px'
      %br/
      = f.text_field :street2, placeholder: Spina::Shop::Address.human_attribute_name(:street2), style: 'padding-top: 0px; padding-bottom: 0px; height: 30px'

  .sidebar-form-group
    .sidebar-form-label
      = Spina::Shop::Address.human_attribute_name :house_number
    .sidebar-form-control
      = f.text_field :house_number, placeholder: Spina::Shop::Address.human_attribute_name(:house_number), style: 'padding-bottom: 0px; height: 40px'
      = f.text_field :house_number_addition, placeholder: Spina::Shop::Address.human_attribute_name(:house_number_addition), style: 'padding-top: 0px; padding-bottom: 0px; height: 30px'

  .sidebar-form-group
    .sidebar-form-label
      = Spina::Shop::Address.human_attribute_name :postal_code
    .sidebar-form-control
      = f.text_field :postal_code

  .sidebar-form-group
    .sidebar-form-label
      = Spina::Shop::Address.human_attribute_name :city
    .sidebar-form-control
      = f.text_field :city

  .sidebar-form-group
    .sidebar-form-label
      = Spina::Shop::Address.human_attribute_name :country
    .sidebar-form-control
      = f.select :country_id, options_for_select(Spina::Shop::Country.order(:name).map{|c| [c.name, c.id]}, f.object.country_id), {include_blank: true}, class: 'select2', style: 'width: 100%'
  
  .sidebar-form-group
    .sidebar-form-label
      =t 'spina.delete'
    .sidebar-form-control
      %div{style: 'margin: 12px 10px'}
        = f.check_box :_destroy, data: {switch: true}