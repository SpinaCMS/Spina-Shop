.sidebar-form
  .sidebar-form-content
    .well
      #analytics_graph{style: 'margin-right: -20px'}

    .well
      #analytics_table

  .sidebar-form-sidebar
    = form_with url: spina.shop_admin_analytics_path do |f|
      %div{style: "height: 1px; background: #ddd; border: none; margin: 50px 0 20px 0; display: flex; align-items: center; justify-content: flex-start"}
        %label{style: "background: rgb(245, 245, 250); padding-right:10px; font-weight: 600; font-size: 14px; color: rgb(51, 51, 51); cursor: pointer"} Periode

      .grouped-form-groups
        .form-group
          .input-group
            .form-label Begindatum
            .form-control{style: "flex: 1.5"}= f.date_field :from, class: 'datepicker', placeholder: "Datum"

        .form-group
          .input-group
            .form-label Einddatum
            .form-control{style: "flex: 1.5"}= f.date_field :to, class: 'datepicker', placeholder: "Datum"

        .form-group
          .input-group
            .form-label Weergave
            .form-control{style: "flex: 1.5"}
              .select-dropdown{style: 'width: 100%'}= f.select :period, options_for_select([['Dag', 'day'], ['Maand', 'month'], ['Jaar', 'year']])

        .form-group
          .input-group
            .form-label Online/offline
            .form-control{style: "flex: 1.5"}
              .select-dropdown{style: 'width: 100%'}= f.select :online_offline, options_for_select([['Allebei', 'both'], ['Online', 'online'], ['Offline', 'offline']])

      = f.submit "Toon resultaten", class: 'button button-primary', style: 'width: 100%'
