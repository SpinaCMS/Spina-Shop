%tr{class: ('text-muted' if !product.active? || product.archived?), style: ("border-bottom: none" if defined?(no_border) && no_border)}
  %td.align-center{style: 'width: 30px'}
    = image_tag attachment_url(product.product_images.first, :file, :fit, 30, 30, fallback: ''), style: 'vertical-align: middle; margin: -10px 0'
  %td{style: ('text-indent: 20px' if defined?(variant) && variant)}
    = link_to product.name, spina.shop_admin_product_path(product), class: 'table-link'
    %small= product.product_collections.pluck(:name).join(", ").html_safe
  %td{style: "padding: 6px 12px"}
    %small{style: "opacity: .75"}
      %span{style: "background: #e6e6e6; border-radius: 50px; height: 20px; width: auto; display: inline-block; text-align: center; line-height: 20px; font-weight: bold; padding: 0 5px; min-width: 20px; font-size: 10px; background: #e18130; color: white"} S
      - if product.id % 6 == 0 || product.id % 5 == 0
        %span{style: "background: #e6e6e6; border-radius: 50px; height: 20px; width: auto; display: inline-block; text-align: center; line-height: 20px; font-weight: bold; padding: 0 5px; min-width: 20px; font-size: 10px; background: #ddd; color: white"} DF
      - else
        %span{style: "background: #e6e6e6; border-radius: 50px; height: 20px; width: auto; display: inline-block; text-align: center; line-height: 20px; font-weight: bold; padding: 0 5px; min-width: 20px; font-size: 10px; background: #60b1d4; color: white"} DF
      
      - if product.id % 21 == 0 || product.id % 20 == 0
        %span{style: "background: #e6e6e6; border-radius: 50px; height: 20px; width: auto; display: inline-block; text-align: center; line-height: 20px; font-weight: bold; padding: 0 5px; min-width: 20px; font-size: 10px; background: #d6726f; color: white"} E
      - else
        %span{style: "background: #e6e6e6; border-radius: 50px; height: 20px; width: auto; display: inline-block; text-align: center; line-height: 20px; font-weight: bold; padding: 0 5px; min-width: 20px; font-size: 10px; background: #ddd; color: white"} E
  %td.align-right
    - if product.promotion?
      %small{style: 'text-decoration: line-through'}= number_to_currency product.base_price
    = number_to_currency product.price
  %td.align-right
    = product.location
  %td.align-right
    = product.stock_level if product.stock_enabled?
  - if Spina::Shop::Product.where(can_expire: true).any?
    %td.align-right
      =l product.expiration_date, format: '%B \'%y' if product.can_expire? && product.expiration_date.present?

  %td.align-right
    - if product.active?
      - if !product.archived?
        - if product.stock_enabled?
          - if product.in_stock?
            - if product.can_expire? && product.expiration_date.present? && product.expiration_date < 2.months.from_now
              - if product.expiration_date < Date.today
                .status-dot.status-dot-danger{data: {tooltip: t('spina.shop.products.expired')}}
              - else
                .status-dot.status-dot-warning{data: {tooltip: t('spina.shop.products.almost_expired')}}
            - else
              .status-dot.status-dot-success
          - else
            .status-dot.status-dot-danger{data: {tooltip: t('spina.shop.products.out_of_stock')}}
        - else
          .status-dot.status-dot-success
      - else
        .status-dot
    - else
      .status-dot
