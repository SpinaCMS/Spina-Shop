.table-container
  %table.table
    %tr
      %td
        %strong= sales_category.name
      %td.align-right.text-muted
        = sales_category.products.count
        products

    - sales_category.sales_category_codes.each do |sales_category_code|
      %tr
        %td
          = sales_category_code.label
          - if sales_category_code.business
            %span.text-muted
              = "(#{Spina::Shop::SalesCategory.human_attribute_name :business})"
        %td.align-right= sales_category_code.code